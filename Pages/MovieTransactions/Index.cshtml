@page
@model BuyMovies.Pages.MovieTransactions.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Movie Transactions</h2>

<p>
    <a class="btn btn-outline-secondary" asp-page="Create">Create New</a>
</p>
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MovieTransaction[0].Movie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovieTransaction[0].Customer)
            </th>
            <th>
                Amount
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.MovieTransaction) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Movie.MovieName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.CutomerExternalId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Movie.Price)
            </td>
            <td>
                <a class="btn btn-outline-secondary" asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="btn btn-outline-secondary" asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a class="btn btn-outline-secondary" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
