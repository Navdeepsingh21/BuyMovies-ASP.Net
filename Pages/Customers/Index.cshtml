@page
@model BuyMovies.Pages.Customers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Customers</h2>

<p>
    <a class="btn btn-outline-secondary" asp-page="Create">Create New</a>
</p>
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].CustomerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].CutomerExternalId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Customer) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CutomerExternalId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a class="btn btn-outline-secondary"  asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="btn btn-outline-secondary"  asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a class="btn btn-outline-secondary"  asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
