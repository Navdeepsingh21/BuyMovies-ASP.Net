@page
@model BuyMovies.Pages.Comments.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Comments</h2>

<p>
    <a class="btn btn-outline-secondary" asp-page="Create">Create New</a>
</p>
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Comment[0].Customer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment[0].CommentText)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Comment) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CommentText)
            </td>
            <td>
                <a  class="btn btn-outline-secondary"  asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="btn btn-outline-secondary"  asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a class="btn btn-outline-secondary"  asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
